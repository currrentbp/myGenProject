<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="SYS_LOG_DIR" value="${log.path}"/>
    <property name="LOG_FILE" value="currentbp" />
    <conversionRule conversionWord="ip" converterClass="com.bp.net.IpConvert" />
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%ip] %5p ${PID:- } --- [%t] %-40.40logger{39} : %m%n</pattern>
        </encoder>
    </appender>

    <appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${SYS_LOG_DIR}/${LOG_FILE}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${SYS_LOG_DIR}/history/${LOG_FILE}.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%ip] %5p ${PID:- } --- [%t] %-40.40logger{39} : %m%n</pattern>
        </encoder>
    </appender>
    <appender name="serviceAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${SYS_LOG_DIR}/${LOG_FILE}.error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${SYS_LOG_DIR}/history/${LOG_FILE}.%d{yyyy-MM-dd}.error.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%ip] [%thread] %-5level %logger{5} - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter"><!-- 只打印错误日志 -->
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- project default level -->
    <logger name="com.bp" level="INFO" />
    <logger name="com" level="INFO" />
    <logger name="org" level="ERROR" />
    <!--log4jdbc -->

    <!-- mybatis 显示SQL begin -->
    <!--<logger name="com.ibatis" level="ERROR" />-->
    <!--<logger name="com.ibatis.common.jdbc.SimpleDataSource" level="ERROR" />-->
    <!--<logger name="com.ibatis.common.jdbc.ScriptRunner" level="ERROR" />-->
    <!--<logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate" level="ERROR" />-->
    <!--<logger name="Java.sql.Connection" level="ERROR" />-->
    <!--<logger name="java.sql.Statement" level="ERROR" />-->
    <!--<logger name="java.sql.PreparedStatement" level="ERROR" />-->
    <!--<logger name="java.sql.ResultSet" level="ERROR" />-->
    <!-- mybatis 显示SQL end -->


    <root level="INFO">
        <appender-ref ref="console" />
        <appender-ref ref="rollingFile" />
        <appender-ref ref="serviceAppender"/>
    </root>

</configuration>